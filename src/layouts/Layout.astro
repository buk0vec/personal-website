---
export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} - ` : ""}Nick Bukovec</title>
  </head>
  <body class="bg-zinc-300">
    <nav class='px-4 pt-6 pb-2'>
      <div class='flex flex-row items-baseline gap-4 justify-center'>
        <a href='/' class='text-xl font-semibold text-black hover:text-purple-900'>Home</a>
        <a href='#' class='text-xl font-semibold text-black hover:text-purple-900'>Portfolio</a>
        <a href='#' class='text-xl font-semibold text-black hover:text-purple-900'>Contact</a>
      </div>
    </nav>
    <slot />
  </body>
</html>
